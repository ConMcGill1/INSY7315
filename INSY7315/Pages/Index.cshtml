@page
@model INSY7315.Pages.IndexModel
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input class="form-control" name="Q" value="@Model.Q" placeholder="Search..." />
    </div>
    <div class="col-md-3">
        <input class="form-control" name="Category" value="@Model.Category" placeholder="Category" />
    </div>
    <div class="col-md-3">
        <input class="form-control" name="Model" value="@Model.Model" placeholder="Model" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Owner</th>
            <th>Category</th>
            <th>Model</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Product)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Owner</td>
                <td>@p.Category</td>
                <td>@p.Model</td>
                <td>@p.Price</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-secondary" asp-page="/Details" asp-route-id="@p.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-page="/Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-page="/Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                       href="?Q=@Model.Q&Category=@Model.Category&Model=@Model.Model&PageNumber=@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
