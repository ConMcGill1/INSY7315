@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form method="get" class="mb-3">
    <input type="text" name="Q" value="@Model.Q" placeholder="Search name/id/category/model" />
    <input type="text" name="Category" value="@Model.Category" placeholder="Category" />
    <input type="text" name="Model" value="@Model.Model" placeholder="Model" />
    <button type="submit">Search</button>
</form>
<p>
    <a class="btn btn-primary" asp-page="./Create" data-requires-online>Create New</a>
    <a class="btn btn-secondary" asp-page="./Export" data-requires-online>Export CSV</a>
</p>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-page="./Index"
               asp-route-Q="@Model.Q"
               asp-route-Category="@Model.Category"
               asp-route-Model="@Model.Model"
               asp-route-Page="@i">
                @(i == Model.Page ? $"[{i}]" : i)
            </a>
            @:
        }
    </nav>
}
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
