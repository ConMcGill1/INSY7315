@page
@model INSY7315.Pages.DashboardModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<h2 class="mt-3">Dashboard</h2>


<div class="row g-3 my-3">
    <div class="col-12 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-1">Total Products</h5>
                        <div class="display-6 fw-bold">@Model.TotalProducts</div>
                    </div>
                    <i class="bi bi-box-seam fs-1 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-1">Total Inventory Value</h5>
                        <div class="display-6 fw-bold">@Model.TotalInventoryValue.ToString("C")</div>
                    </div>
                    <i class="bi bi-currency-dollar fs-1 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card shadow-sm mt-3">
    <div class="card-header">
        <strong>Top Categories</strong>
    </div>
    <div class="card-body p-0">
        <table class="table table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th>Category</th>
                    <th class="text-end">Items</th>
                    <th class="text-end">Value</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.TopCategories is not null && Model.TopCategories.Count > 0)
                {
                    foreach (var c in Model.TopCategories)
                    {
                        <tr>
                            <td>@c.Category</td>
                            <td class="text-end">@c.Count</td>
                            <td class="text-end">@c.Value.ToString("C")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-3">
                            No category data available yet.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
