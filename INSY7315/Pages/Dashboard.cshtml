@page
@model INSY7315.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="h6 text-muted">Total Products</div>
                <div class="h3">@Model.TotalProducts</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="h6 text-muted">Inventory Value</div>
                <div class="h3">@Model.TotalValue.ToString("0.00")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="h6 text-muted">Exports</div>
                <a class="btn btn-sm btn-outline-primary me-2" href="/api/products/export.csv">Products CSV</a>
                <a class="btn btn-sm btn-outline-primary me-2" href="/api/products/export.pdf">Products PDF</a>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Top Categories</h5>
                <table class="table table-sm">
                    <thead><tr><th>Category</th><th>Count</th><th>Value</th></tr></thead>
                    <tbody>
                        @foreach (var c in Model.TopCategories)
                        {
                            <tr>
                                <td>@c.Category</td>
                                <td>@c.Count</td>
                                <td>@c.Value.ToString("0.00")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Recent Alerts</h5>
                <ul class="list-group">
                    @foreach (var a in Model.RecentAlerts)
                    {
                        <li class="list-group-item">
                            <div class="small text-muted">@a.CreatedAt</div>
                            <div>@a.Message</div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
